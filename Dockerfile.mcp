# MCP Server Dockerfile
# Provides unified AWS resource access for CA A2A agents via HTTP

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies for PostgreSQL
RUN apt-get update && apt-get install -y \
    gcc \
    postgresql-client \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .

# Install Python dependencies (excluding mcp SDK - not needed for HTTP server)
RUN pip install --no-cache-dir aiohttp aioboto3 asyncpg python-json-logger PyJWT cryptography python-dotenv PyYAML

# Copy MCP server files
COPY mcp_server_http.py .
COPY mcp-config.json .
COPY config.py .
COPY utils.py .

# Create non-root user
RUN useradd -m -u 1000 mcpuser && chown -R mcpuser:mcpuser /app
USER mcpuser

# Expose HTTP port
EXPOSE 8000

# Health check via HTTP endpoint
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8000/health')" || exit 1

# Run MCP HTTP server
CMD ["python", "mcp_server_http.py"]

